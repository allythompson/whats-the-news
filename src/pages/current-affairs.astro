---
import LiveNews from '../components/LiveNews.astro';
---


<!DOCTYPE html>
<html lang="en">
  <head>
    <meta name="robots" content="noindex, nofollow">
    <meta charset="UTF-8" />
    <title>Current Affairs | What's the News</title>
    <style>
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
        background-color: #f3f3ed;
        color: #222;
        margin: 0;
        padding: 0;
      }

      header {
        padding: 2rem 1.5rem;
        border-bottom: 1px solid #ddd;
        background-color: white;
      }

      .container {
        max-width: 900px;
        margin: auto;
        padding: 2rem 1.5rem;
        display: flex;
        flex-direction: row;
        gap: 2rem;
      }

      .main-content {
        flex: 2;
      }

      .sidebar {
        flex: 1;
      }

      h1 {
        font-size: 2rem;
        margin-bottom: 1rem;
      }

      .lede {
        font-size: 1.1rem;
        color: #555;
        margin-bottom: 2rem;
      }

      ul.news-list {
        list-style: none;
        padding: 0;
      }

      ul.news-list li {
        margin-bottom: 1rem;
      }

      ul.news-list li a {
        text-decoration: none;
        color: #333;
        font-weight: 500;
      }

      .chatbox-toggle {
        display: inline-block;
        padding: 0.5rem 1rem;
        background-color: #ddd;
        color: #444;
        border-radius: 4px;
        text-decoration: none;
        cursor: pointer;
        font-weight: 500;
      }

      #chatbox {
        margin-top: 2rem;
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.5s ease;
      }

      #chatbox.open {
        max-height: 600px;
      }

      iframe {
        width: 100%;
        height: 500px;
        border: none;
        border-radius: 6px;
        box-shadow: 0 0 12px rgba(0,0,0,0.04);
      }
    </style>
    <script>
      function toggleChat() {
        const chat = document.getElementById('chatbox');
        chat.classList.toggle('open');
      }

      document.addEventListener('keydown', function(event) {
        if (event.key === 'Escape') {
          window.location.href = '/';
        }
      });
    </script>
  </head>

  <body>

    <main class="container">
        <section class="main-content">
            <LiveNews />
          </section>

    </main>
  </body>
</html>
